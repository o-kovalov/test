<div class="well">
	<table class="table table-striped table-hover table-condensed">
		<thead>
			<tr>
				<th>#</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>e-mail</th>
				<th>City</th>
				<th>Role</th>
				<th>Create</th>
				<th>Update</th>
				<th>Options</th>				
			</tr>
		</thead>
		<tbody>
			<% for(var i=0; i<userlist.length; i++) { %>
			<tr id="table-row-<%= i+1 %>">
				<td><%= i+1 %></td>
				<td class="id" style="display:none"><%= userlist[i]._id %></td>
				<td class="firstName" contenteditable='true'><%= userlist[i].firstName %></td>
				<td class="lastName" contenteditable='true'><%= userlist[i].lastName %></td>
				<td class="email" contenteditable='true'><%= userlist[i].email %></td>
				<td>
					<select class="cityId" size="1">
						<% for(var y=0; y<cities.length; y++) { %>
							<%var a = JSON.stringify(cities[y]._id) %>
							<%var b = JSON.stringify(userlist[i].cityId._id) %>					
							<% if (a === b) { %>
								<option value=<%= cities[y]._id %> selected><%= cities[y].name %></option>
							<% } else { %>
								<option value=<%= cities[y]._id %> ><%= cities[y].name %></option>
							<% } %>
						<% } %>
					</select>	
				</td>
				<td>
					<select class="roleId" size="1">
						<% for(var y=0; y<roles.length; y++) { %>
							<%var a = JSON.stringify(roles[y]._id) %>
							<%var b = JSON.stringify(userlist[i].roleId._id) %>					
							<% if (a === b) { %>
								<option value=<%= roles[y]._id %> selected><%= roles[y].name %></option>
							<% } else { %>
								<option value=<%= roles[y]._id %> ><%= roles[y].name %></option>
							<% } %>
						<% } %>
					</select>	
				</td>
				<td class="create"><%= userlist[i].create.toDateString() + " " + userlist[i].create.toLocaleTimeString()%></td>
				<td class="update"><%= userlist[i].update.toDateString() + " " + userlist[i].update.toLocaleTimeString()%></td>
				<td>
					<i class="fa fa-floppy-o save-user" id="row-<%= i+1 %>"></i>
					<i class="fa fa-times delete-user" id="row-<%= i+1 %>"></i>
				</td>				
			</tr>
			<% } %>
		</tbody>
	</table>
</div>